<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Kết nối mạng tới Server của Agora -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Thu âm giọng nói -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- Bật Camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Cho phép thay đổi âm lượng hệ thống, bật/tắt loa ngoài - microphone,... -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- Cho biết đang dùng Wifi hay 4G để tối ưu chất lượng âm thanh -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Để hỗ trợ nghe gọi qua tai nghe Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chatappfrontend">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Chatappfrontend" />
        <activity
            android:name=".ui.VoiceChannelActivity"
            android:exported="false"
            android:supportsPictureInPicture="true"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:theme="@style/Theme.Chatappfrontend" />
    </application>

</manifest>