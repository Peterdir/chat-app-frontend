<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/iv_notif_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_notif_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/discord_text_primary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Time -->
        <TextView
            android:id="@+id/tv_notif_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/discord_text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Optional Button (e.g. "Thêm Bạn") -->
    <TextView
        android:id="@+id/btn_notif_action"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/bg_button_outline"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/discord_text_primary"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>