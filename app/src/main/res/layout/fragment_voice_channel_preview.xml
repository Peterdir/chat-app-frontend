<?xml version="1.0" encoding="utf-8"?>
<!-- Nền chỉnh màu Xám Chì (2b2d31) y Discord -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_dark" 
    android:paddingBottom="24dp">

    <!-- Thanh ngang điều hướng góc trên -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="#4E5058"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Thanh Tiêu đề -->
    <ImageView
        android:id="@+id/ic_down"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_chevron_right"
        android:rotation="90"
        app:tint="#B5BAC1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drag_handle" />

    <TextView
        android:id="@+id/tv_preview_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# d"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@id/ic_down"
        app:layout_constraintStart_toEndOf="@id/ic_down"
        app:layout_constraintTop_toTopOf="@id/ic_down" />

    <ImageView
        android:id="@+id/btn_add_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_person_add" 
        app:tint="#B5BAC1"
        app:layout_constraintBottom_toBottomOf="@id/ic_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_down" />

    <!-- Chữ báo trạng thái phòng trống -->
    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Hiện chưa có ai ở đây!\nKhi nào bạn sẵn sàng trò chuyện, hãy tham gia."
        android:textColor="#F2F3F5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_preview_channel_name" />

    <!-- Thanh Control -->
    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_nitro_card_green" 
        android:backgroundTint="#1e1f22"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_empty_state">

        <!-- Nút Mic -->
        <ImageButton
            android:id="@+id/btn_preview_mute"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_white"
            android:scaleType="centerInside"
            android:src="@drawable/ic_mic_off"
            app:tint="#ED4245" />

        <!-- Nút Tham Gia Thoại -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_join_voice"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nitro_button_green"
            android:text="Tham Gia Thoại"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Nút Tin nhắn -->
        <ImageButton
            android:id="@+id/btn_text_chat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_dark"
            android:src="@drawable/ic_chat_bubble"
            app:tint="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
