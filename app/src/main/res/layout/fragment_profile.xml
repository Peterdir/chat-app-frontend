<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/discord_background">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- ==================== BANNER + AVATAR ==================== -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Banner gradient -->
                <View
                    android:id="@+id/profile_banner"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bg_profile_banner" />

                <!-- Avatar container -->
                <FrameLayout
                    android:id="@+id/avatar_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="70dp">

                    <!-- Avatar Decoration (Rotating Ring) -->
                    <ImageView
                        android:id="@+id/avatar_decoration"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_gravity="center"
                        android:src="@drawable/bg_avatar_decoration_ring"
                        android:contentDescription="Avatar Decoration" />

                    <!-- Avatar dark border circle -->
                    <View
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_avatar_border" />

                    <!-- Avatar image (Circular Cropped) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/avatar5"
                            android:scaleType="centerCrop"
                            android:contentDescription="Avatar" />
                    </androidx.cardview.widget.CardView>

                    <!-- Online status dot -->
                    <View
                        android:id="@+id/status_dot"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_status_online" />
                </FrameLayout>

                <!-- "Sở thích mới" tag -->
                <TextView
                    android:id="@+id/tag_hobby"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="136dp"
                    android:background="@drawable/bg_tag_chip"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="＋ Sở thích mới"
                    android:textColor="@color/discord_text_primary"
                    android:textSize="13sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button" />
            </FrameLayout>

            <!-- ==================== USERNAME + HANDLE ==================== -->
            <LinearLayout
                android:id="@+id/username_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duy"
                    android:textColor="@color/discord_text_primary"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="peter_18352"
                        android:textColor="@color/discord_text_secondary"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_quest_badge"
                        android:contentDescription="Quest Badge"
                        app:tint="@null" />
                </LinearLayout>
            </LinearLayout>

            <!-- ==================== SỬA HỒ SƠ BUTTON ==================== -->
            <TextView
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_button_blurple"
                android:gravity="center"
                android:text="Sửa Hồ Sơ"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button"
                android:elevation="4dp"
                app:drawableStartCompat="@drawable/ic_edit_pencil"
                android:drawablePadding="8dp"
                android:paddingStart="110dp"
                android:paddingEnd="110dp"
                app:drawableTint="@color/white" />

            <!-- ==================== CẢI THIỆN HỒ SƠ CARD ==================== -->
            <LinearLayout
                android:id="@+id/card_improve_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_outline"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp">

                <!-- Title row + close button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Cải thiện hồ sơ của bạn"
                        android:textColor="@color/discord_text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btn_close_improve"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:contentDescription="Đóng"
                        app:tint="@color/discord_text_secondary"
                        android:clickable="true"
                        android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button" />
                </RelativeLayout>

                <!-- Nitro + Store buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_nitro"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_button_blurple"
                        android:gravity="center_vertical"
                        android:text="  Nhận Nitro"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button"
                        app:drawableStartCompat="@drawable/ic_nitro_boost"
                        app:drawableTint="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                    <TextView
                        android:id="@+id/btn_store"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_blurple"
                        android:gravity="center_vertical"
                        android:text="  Cửa hàng"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button"
                        app:drawableStartCompat="@drawable/ic_store_modern"
                        app:drawableTint="@color/white"
                        android:paddingStart="20dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ==================== SỐ DƯ ORBS ==================== -->
            <LinearLayout
                android:id="@+id/card_orbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rounded_card"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số dư Orbs"
                    android:textColor="@color/discord_text_primary"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="◇ 200"
                    android:textColor="@color/discord_text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ==================== GIA NHẬP TỪ ==================== -->
            <LinearLayout
                android:id="@+id/card_joined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_card"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gia Nhập Từ"
                    android:textColor="@color/discord_text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_discord_logo"
                        android:contentDescription="Discord"
                        app:tint="@color/discord_text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="5 thg 10, 2023"
                        android:textColor="@color/discord_text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ==================== BẠN BÈ ==================== -->
            <LinearLayout
                android:id="@+id/card_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_card"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bạn bè"
                    android:textColor="@color/discord_text_primary"
                    android:textSize="15sp" />

                <!-- Friend avatars overlapping with CardView for circular shape -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/avatar1"
                            android:scaleType="centerCrop"
                            android:contentDescription="Friend 1" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="22dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/avatar2"
                            android:scaleType="centerCrop"
                            android:contentDescription="Friend 2" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="44dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/avatar3"
                            android:scaleType="centerCrop"
                            android:contentDescription="Friend 3" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="66dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/avatar4"
                            android:scaleType="centerCrop"
                            android:contentDescription="Friend 4" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="›"
                    android:textColor="@color/discord_text_secondary"
                    android:textSize="28sp" />
            </LinearLayout>

            <!-- ==================== GHI CHÚ ==================== -->
            <LinearLayout
                android:id="@+id/card_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_card"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ghi chú (chỉ hiển thị cho bạn)"
                    android:textColor="@color/discord_text_secondary"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_event"
                    android:contentDescription="Ghi chú"
                    app:tint="@color/discord_text_secondary" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Header Bar (Floating on top) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/btn_store_header"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_store_modern"
            android:background="@drawable/bg_circle_dark"
            android:contentDescription="Store"
            app:tint="@color/discord_text_secondary"
            android:clickable="true"
            android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:id="@+id/btn_nitro_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_pill_dark"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_nitro_boost"
                    app:tint="@color/discord_text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Nitro"
                    android:textColor="@color/discord_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Shimmer Overlay View -->
            <View
                android:id="@+id/shimmer_view"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_shimmer"
                android:rotation="20"
                android:alpha="0.5"
                android:visibility="invisible" />
        </FrameLayout>

        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:src="@drawable/ic_settings"
            android:background="@drawable/bg_circle_dark"
            android:contentDescription="Settings"
            app:tint="@color/discord_text_secondary"
            android:clickable="true"
            android:focusable="true"
                    android:stateListAnimator="@animator/anim_scale_button" />
    </LinearLayout>

</FrameLayout>
